<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/home.css">
    <title>Sentence Details</title>
</head>

<body>
    <section class="col-md-8 offset-md-2 my-3">
        <div class="row">
            <div class="col-md-2 d-flex flex-column rounded-start ">
                <a class="nav-link  pt-4 align-self-start text-decoration-none fs-6 "
                    href="/sents?page=<%=page %>">Annotation</a>
                <button class="btn  btn-link btn-sm align-self-start text-decoration-none fs-6 "
                    data-sent-id="<%=sentence._id %>" id="saveSentWords">Save
                    Updates</button>
            </div>
            <div class="col-md-10">
                <h1>Sentence Details</h1>
                <div class="d-flex flex-row border-bottom border-top border-info">
                    <h6 class="text-nowrap align-self-top pt-2">SENTENCE WORDS:</h6>
                    <p class="px-2 lead">
                        <% for (let word of sentence.sentWords) { %><span>
                                <%= word[0] %>
                            </span>
                            <% } %>
                    </p>
                </div>
                <div>
                    <div class="row pt-3 border-bottom border-info">
                        <div class="col-4">
                            <h6> WORD</h6>
                        </div>
                        <div class="col-2">
                            <h6> Label</h6>

                        </div>
                        <div class="col-6  d-flex justify-content-center">
                            <h6> Utilities</h6>
                        </div>
                    </div>
                    <% for (let i=0; i < sentence.sentWords.length; i++) {%>
                        <div class="row wordLabelPair pt-2  ">
                            <div class="col-4 word">
                                <span>
                                    <%=sentence.sentWords[i][0] %>
                                </span>
                            </div>
                            <div class="col-2 label">
                                <span>
                                    <%=sentence.sentWords[i][1] %>
                                </span>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#Modal">Update
                                    Word</button>
                                <button class="btn btn-primary btn-sm " data-bs-toggle="modal"
                                    data-bs-target="#Modal">Add
                                    Word</button>
                                <button class="btn btn-primary btn-sm deleteWord ">Delete Word</button>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </section>
    <section>
        <!-- Modal -->
        <div class="modal fade" id="Modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
            aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="eModalLabel">Sentence Word</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="#">
                            <div class="row">
                                <div class="col">
                                    <input type="text" id="sentWord" class="form-control" placeholder="Word"
                                        aria-label="Word">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveWord">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
    </script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
    </script>
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script src="/javascripts/validateForms.js"></script>
<script src=" https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<script src="/javascripts/sentenceManagement.js"></script>
</body>

</html>