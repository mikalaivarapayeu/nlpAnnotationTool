<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/home.css">
    <title>Sentence Details</title>
</head>

<body>
    <h1>Sentence Details</h1>
    <div>

        <p><span>Sentence Words</span <% for (let word of sentence.sentWords) { %><span>
                <%= word[0] %>
            </span>
            <% } %>
        </p>
    </div>
    <div>
        <div class="row">
            <div class="col-5">
                <span> WORD</span>
            </div>
            <div class="col-4">
                <span> Label</span>

            </div>
            <div class="col-3">
                <span> Utilities</span>
            </div>
        </div>
        <% for (let i=0; i < sentence.sentWords.length; i++) {%>
            <div class="row wordLabelPair">
                <div class="col-5 word">
                    <span>
                        <%=sentence.sentWords[i][0] %>
                    </span>
                </div>
                <div class="col-3 label">
                    <span>
                        <%=sentence.sentWords[i][1] %>
                    </span>
                </div>
                <div class="col-4">
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#Modal">Update
                        Word</button>
                    <button class="btn btn-primary btn-sm " data-bs-toggle="modal" data-bs-target="#Modal">Add
                        Word</button>
                    <button class="btn btn-primary btn-sm">Delete Word</button>
                </div>
            </div>
            <% } %>
    </div>
    <div>
        <form action=" sents/<%=sentence._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-primary btn-sm ">Delete Sentence</button>
        </form>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="Modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
        aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eModalLabel">Sentence Word</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="#">
                        <div class="row">
                            <div class="col">
                                <input type="text" id="sentWord" class="form-control" placeholder="Word"
                                    aria-label="Word">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveWord">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
    </script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
    </script>
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script src="/javascripts/validateForms.js"></script>

<script src="/javascripts/sentenceManagement.js"></script>
</body>

</html>